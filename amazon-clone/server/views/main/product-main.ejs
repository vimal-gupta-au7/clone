<% layout('layout') -%>

    <div class="jumbotron" id="navbar-gap">
        <div class="container">
            <h1 class="display-3">Find your favourite Product</h1>
            <p class="text-center">Search many of Ecommerce's Product</p>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="input-group col-md-12">
                        <input type="text" id="search" class="form-control input-lg" name="search_term" placeholder="Search for a Product...">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="far fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row" id="searchResults">
            <% for (var i = 0; i < products.length; i++) { %>
                <div class="col-md-4">
                    <a href="/product/<%= products[i]._id %>">
                        <div class="thumbnail">
                            <img class="img-thumbnail" src="<%= products[i].image %>">
                            <div class="caption">
                                <h3>
                                    <%= products[i].name %>
                                </h3>
                                <p>
                                    <%= products[i].category.name %>
                                </p>
                                <p>
                                    <%= products[i].price %>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <nav class="" aria-label="Page navigation example">
                    <ul class="pagination">
                        <% for (var i = 1; i < pages; i++) { %>
                            <% if (i === 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } else { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/page/<%= i %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>
                                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>